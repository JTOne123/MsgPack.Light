$root = (split-path -parent $MyInvocation.MyCommand.Definition) + '\..'
$version = [System.Reflection.Assembly]::LoadFile("$root\artifacts\bin\msgpack\Release\dnxcore50\MsgPack.Light.dll").GetName().Version
$versionStr = "{0}.{1}.{2}" -f ($version.Major, $version.Minor, $version.Build)

Write-Host "Setting .nuspec version tag to $versionStr"

$content = (Get-Content $root\NuGet\MsgPack.Light.nuspec) 
$content = $content -replace '\$version\$',$versionStr

$content | Out-File $root\nuget\MsgPack.Light.compiled.nuspec

& nuget pack $root\nuget\MsgPack.Light.compiled.nuspec
